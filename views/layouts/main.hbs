<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- Latest compiled and minified Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />

    <title>WEB322 - Assignment 2 - Solution</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <div class="col-2"></div>

        <!-- Brand and toggle get grouped for better mobile display -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="#">WEB322 - Assignment Template</a>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            {{#navLink "/Shop"}}Shop{{/navLink}}
            {{#navLink "/About"}}About{{/navLink}}
            {{#navLink "/Items"}}Items{{/navLink}}
            {{#navLink "/Categories"}}Categories{{/navLink}}
          </ul>
          
          {{#if session.user}}
          <!-- If the user is logged in -->
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <form class="navbar-form">
                <div class="dropdown">
                  <button class="btn btn-primary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;{{session.user.userName}}&nbsp;&nbsp;<span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="userMenu">
                    <li><a class="dropdown-item" href="/userHistory">User History</a></li>
                    <li><a class="dropdown-item" href="/logout">Log Out</a></li>
                  </ul>
                </div>
              </form>
            </li>
          </ul>
          {{else}}
          <!-- If the user is not logged in -->
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a href="/register" class="btn btn-success nav-link"><span class="glyphicon glyphicon-cog"></span>&nbsp;&nbsp;Register</a>
            </li>
            <li class="nav-item">
              <a href="/login" class="btn btn-primary nav-link"><span class="glyphicon glyphicon-chevron-right"></span>&nbsp;&nbsp;Log In</a>
            </li>
          </ul>
          {{/if}}
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>
    <div class="container" style="padding-top: 90px;">
      {{{body}}}
    </div>

    <!-- Latest compiled and minified Bootstrap 5 JavaScript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
